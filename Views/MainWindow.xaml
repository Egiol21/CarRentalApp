<Window x:Class="CarRentalApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Car Rental System" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Manage Cars" Click="OpenCarManagement" Margin="0,0,0,10"/>
            <Button Content="Manage Customers" Click="OpenCustomerManagement" Margin="0,0,0,10"/>
            <Button Content="Make Reservation" Click="OpenReservationWindow" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
